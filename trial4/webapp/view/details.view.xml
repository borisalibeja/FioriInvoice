<mvc:View controllerName="trial4.controller.details"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.ui.table"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.core"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    xmlns:l="sap.ui.layout">

    <m:Page id="details" title="{i18n>tableName}">
                <!-- Go Back Button -->
        <m:Button id="_IDGenButton20" text="{i18n>Go Back}" press="onPress" />
        <m:content>

            <m:Panel id="_IDGenPanel1" 
                    width="150px" 
                    height="150px" 
                    backgroundDesign="Transparent" 
                    headerText="" 
                    class="sapUiBorder sapUiSmallMargin">
                <m:VBox id="_IDGenVBox" width="100%" height="100%" alignItems="Center" justifyContent="Center">
                    <m:Text id="_IDGenText20" text="Profile Picture" />
                </m:VBox>
            </m:Panel>



            <!-- Profile Details -->
            <m:FlexBox id="profileDetailsFlexBox" direction="Row" width="100%" justifyContent="SpaceAround">
                <m:Text id="_IDGenText64" text=" " width="30px" />
                <!-- Column 1 -->
                <m:VBox id="column1" width="20%"> <!-- Adjust width to reduce gap -->
                    <m:HBox id="_IDGenHBox7">
                        <m:Text id="_IDGenText22" text="{i18n>firstName}:" />
                        <m:Text id="_IDGenText23" text=" " width="15px" /> <!-- Spacer -->
                        <m:Label id="_IDGenLabel34" text="{detailsModel>/Name1}" design="Bold" />
                    </m:HBox>
                    <m:HBox id="_IDGenHBox">
                        <m:Text id="_IDGenText5" text="{i18n>secondName}:" />
                        <m:Text id="_IDGenText10" text=" " width="15px" /> <!-- Spacer -->
                        <m:Label id="_IDGenLabel27" text="{detailsModel>/Name2}" design="Bold" />
                    </m:HBox>
                    <m:HBox id="_IDGenHBox9">
                        <m:Text id="_IDGenText26" text="{i18n>email}:" />
                        <m:Text id="_IDGenText27" text=" " width="15px" /> <!-- Spacer -->
                        <m:Label id="_IDGenLabel36" text="{detailsModel>/Smtp_addr}" design="Bold" />
                    </m:HBox>
                    <m:HBox id="_IDGenHBox4">
                        <m:Text id="_IDGenText15" text="{i18n>telNr}:" />
                        <m:Text id="_IDGenText16" text=" " width="15px" /> <!-- Spacer -->
                        <m:Label id="_IDGenLabel31" text="{detailsModel>/Tel_number}" design="Bold" />
                    </m:HBox>
                    <m:HBox id="_IDGenHBox3">
                        <m:Text id="_IDGenText13" text="{i18n>address}:" />
                        <m:Text id="_IDGenText14" text=" " width="15px" /> <!-- Spacer -->
                        <m:Label id="_IDGenLabel30" text="{detailsModel>/Street}" design="Bold" />
                    </m:HBox>

                    <m:HBox id="_IDGenHBox10">
                        <m:Text id="_IDGenText28" text="{i18n>city}:" />
                        <m:Text id="_IDGenText29" text=" " width="15px" /> <!-- Spacer -->
                        <m:Label id="_IDGenLabel37" text="{detailsModel>/City1}" design="Bold" />
                    </m:HBox>

                </m:VBox>

                <!-- Column 2 -->
                <m:VBox id="column2" width="80%"> <!-- Adjust width to reduce gap -->
                    <m:HBox id="_IDGenHBox6">
                        <m:Text id="_IDGenText19" text="{i18n>customerNr}:" />
                        <m:Text id="_IDGenText21" text=" " width="15px" /> <!-- Spacer -->
                        <m:Label id="_IDGenLabel33" text="{detailsModel>/Kunnr}" design="Bold" />
                    </m:HBox>

                    <m:HBox id="_IDGenHBox8">
                        <m:Text id="_IDGenText24" text="{i18n>taxNr1}:" />
                        <m:Text id="_IDGenText25" text=" " width="15px" /> <!-- Spacer -->
                        <m:Label id="_IDGenLabel35" text="{detailsModel>/Stcd1}" design="Bold" />
                    </m:HBox>
                    <m:HBox id="_IDGenHBox2">
                        <m:Text id="_IDGenText11" text="{i18n>taxNr2}:" />
                        <m:Text id="_IDGenText12" text=" " width="15px" /> <!-- Spacer -->
                        <m:Label id="_IDGenLabel29" text="{detailsModel>/Stcd2}" design="Bold" />
                    </m:HBox>

                    <m:HBox id="_IDGenHBox5">
                        <m:Text id="_IDGenText17" text="{i18n>indicator}:" />
                        <m:Text id="_IDGenText18" text=" " width="15px" /> <!-- Spacer -->
                        <m:Label id="_IDGenLabel32" text="{detailsModel>/Stkzn}" design="Bold" />
                    </m:HBox>
                </m:VBox>

            </m:FlexBox>

        </m:content>
    </m:Page>
</mvc:View>
