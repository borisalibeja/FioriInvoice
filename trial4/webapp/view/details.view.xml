<mvc:View controllerName="trial4.controller.details"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.ui.table"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.core"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m">

    <m:Page id="details" title="{i18n>tableName}">

        <m:content>

            <!-- Profile Picture Frame -->
            <m:HBox id="_IDGenHBox1" width="150px" height="150px" alignItems="Center" justifyContent="Center" class="sapUiSmallMarginBottom sapUiBorder sapUiBorderRadius">
                <m:Text id="_IDGenText20" text="{i18n>profilePicture}" />
            </m:HBox>

            <!-- Profile Details -->
            <m:VBox id="_IDGenVBox1" binding="{detailsModel>/}">
                <m:items>
                    <m:Text id="_IDGenText5" text="{i18n>customerNr}: {detailsModel>/Kunnr}" />
                    <m:Text id="_IDGenText11" text="{i18n>firstName}: {detailsModel>/Name1}" />
                    <m:Text id="_IDGenText12" text="{i18n>secondName}: {detailsModel>/Name2}" />
                    <m:Text id="_IDGenText13" text="{i18n>taxNr1}: {detailsModel>/Stcd1}" />
                    <m:Text id="_IDGenText14" text="{i18n>taxNr2}: {detailsModel>/Stcd2}" />
                    <m:Text id="_IDGenText15" text="{i18n>email}: {detailsModel>/Smtp_addr}" />
                    <m:Text id="_IDGenText16" text="{i18n>address}: {detailsModel>/Street}" />
                    <m:Text id="_IDGenText17" text="{i18n>city}: {detailsModel>/City1}" />
                    <m:Text id="_IDGenText18" text="{i18n>telNr}: {detailsModel>/Tel_number}" />
                    <m:Text id="_IDGenText19" text="{i18n>indicator}: {detailsModel>/Stkzn}" />
                </m:items>
            </m:VBox>

            <!-- Go Back Button -->
            <m:Button id="_IDGenButton20" text="{i18n>Go Back}" press="onPress">
                <m:layoutData>
                    <m:FlexItemData id="_IDGenFlexItemData2" growFactor="1" />
                </m:layoutData>
            </m:Button>

        </m:content>
    </m:Page>

</mvc:View>
