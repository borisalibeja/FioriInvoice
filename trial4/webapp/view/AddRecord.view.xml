<mvc:View controllerName="trial4.controller.AddRecord"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.ui.table"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.core"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m">
    
    <m:Page id="AddRecord" title="{i18n>tableName}">
        <m:content>
            <m:Text id="_IDGenText65" text=" " width="30px" />
            
            <!-- Wrapper HBox for Padding -->
            <m:HBox id="_IDGenHBox1" width="100%" justifyContent="Start">
                <m:VBox id="_IDGenVBox3" width="300px" alignItems="Start" class="sapUiSmallMarginBegin">
                    <!-- Fields for Adding a New Record -->
                    <m:Label id="_IDGenLabel19" text="{i18n>firstName}" required="true" />
                    <m:Input id="_IDGenInput" 
                             placeholder="{i18n>firstName}" 
                             width="200px" />

                    <m:Label id="_IDGenLabel20" text="{i18n>secondName}" required="true" />
                    <m:Input id="_IDGenInput1" 
                             placeholder="{i18n>secondName}" 
                             width="200px" />

                    <m:Label id="_IDGenLabel21" text="{i18n>email}" required="true" />
                    <m:Input id="_IDGenInput4" 
                             placeholder="{i18n>email}" 
                             width="200px" />

                    <m:Label id="_IDGenLabel22" text="{i18n>telNr}" required="true" />
                    <m:Input id="_IDGenInput7" 
                             placeholder="{i18n>telNr}" 
                             width="200px" />

                    <m:Label id="_IDGenLabel23" text="{i18n>taxNr1}" required="true" />
                    <m:Input id="_IDGenInput2" 
                             placeholder="{i18n>taxNr1}" 
                             width="200px" />

                    <m:Input id="_IDGenInput3" 
                             placeholder="{i18n>taxNr2}" 
                             width="200px" />

                    <m:Input id="_IDGenInput5" 
                             placeholder="{i18n>address}" 
                             width="200px" />

                    <m:Input id="_IDGenInput6" 
                             placeholder="{i18n>city}" 
                             width="200px" />

                    <m:Input id="_IDGenInput8" 
                             placeholder="{i18n>indicator}" 
                             width="200px" />

                    <!-- Save and Cancel Buttons -->
                </m:VBox>
            </m:HBox>
            
            <m:Toolbar id="_IDGenToolbar" width="150px">
                <m:Button id="_IDGenButton2" text="Save" press="onSave" />
                <m:Button id="_IDGenButton3" text="Cancel" press="onCancel" />
            </m:Toolbar>
        </m:content>
    </m:Page>
</mvc:View>
