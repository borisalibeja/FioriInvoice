<mvc:View controllerName="trial4.controller.EditRecord"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.ui.table"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.core"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m">
    
    <m:Page id="EditRecord" title="Edit Invoice">
        <m:content>
            <m:VBox id="_IDGenVBox2" class="sapUiMediumMarginBegin">

                <!-- Display Invno as a non-editable field -->
                <m:Label id="_IDGenLabel5" text="{i18n>Invno}" class="sapMLabelBold" />
                <m:Text id="_IDGenText" text="{recordModel>/Invno}" width="150px" />
                
                <!-- Fields for Editing an Existing Record -->
                <m:Input id="_IDGenInput25" placeholder="{i18n>Invdate}" value="{recordModel>/Invdate}" width="150px" />

                <m:Input id="_IDGenInput26" placeholder="{i18n>Csname}" value="{recordModel>/Csname}" width="150px" />

                <m:Input id="_IDGenInput12" placeholder="{i18n>Prod1}" value="{recordModel>/Prod1}" width="150px" />

                <m:Input id="_IDGenInput13" placeholder="{i18n>Prod2}" value="{recordModel>/Prod2}" width="150px" />

                <m:Input id="_IDGenInput14" placeholder="{i18n>Prod3}" value="{recordModel>/Prod3}" width="150px" />

                <m:Input id="_IDGenInput15" placeholder="{i18n>Prod4}" value="{recordModel>/Prod4}" width="150px" />

                <m:Input id="_IDGenInput16" placeholder="{i18n>Prod5}" value="{recordModel>/Prod5}" width="150px" />

                <m:Input id="_IDGenInput17" placeholder="{i18n>Net}" value="{recordModel>/Net}" width="150px" />

                <m:Input id="_IDGenInput18" placeholder="{i18n>Vat}" value="{recordModel>/Vat}" width="150px" />

                <m:Input id="_IDGenInput19" placeholder="{i18n>Gross}" value="{recordModel>/Gross}" width="150px" />

                <m:Input id="_IDGenInput20" placeholder="{i18n>Curr}" value="{recordModel>/Curr}" width="150px" />

                <m:Input id="_IDGenInput27" placeholder="{i18n>Invdes}" value="{recordModel>/Invdes}" width="150px" />

                <!-- Save and Cancel Buttons -->
                <m:Toolbar id="_IDGenToolbar1" width="200px">
                    <m:Button id="_IDGenButton6" text="Save" press="onSaveChanges" />
                    <m:Button id="_IDGenButton7" text="Cancel" press="onCancel" />
                </m:Toolbar>
            </m:VBox>

        </m:content>
    </m:Page>
</mvc:View>
